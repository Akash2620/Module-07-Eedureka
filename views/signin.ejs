<html ang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="content-type" content="text/html; charset=UTF-8">
    <title>Shopping Dashboard</title>

    <!-- Bootstrap Start -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    <!-- Bootstrap End -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
</head>
<style>
    body {
        text-align: center;
        font-size: 20px;
        font-weight: bold;
    }

    .form-control {
        display: block;
        width: 50%;
        height: calc(1.5em + .75rem + 2px);
        padding: .375rem .75rem;
        margin: 10px 166px;
        font-size: 1rem;
        font-weight: 400;
        line-height: 1.5;
        color: #495057;
        background-color: #fff;
        background-clip: padding-box;
        border: 1px solid #ced4da;
        border-radius: .25rem;
        transition: border-color .15s ease-in-out, box-shadow .15s ease-in-out;
        text-align: center;
    }
</style>

<body>
    <div class="container">
        <div class="row">
            <!--/col-6-->
            <div class="col-md-6">
                <div class="panel">
                    <div class="panel-body">
                        <center>
                            <h5></h5>
                            <h5>Register</h5>
                        </center>
                        <div class="panel panel-info">
                            <div class="panel-body">
                                <form action="/api/auth/register" method="POST">
                                    <div class="form-group">
                                        <label for="name">Name</label>
                                        <input type="text" id="name" name="name" class="form-control"
                                            placeholder="Enter Your Name" />

                                        <label for="email">Email</label>
                                        <input type="email" id="email" name="email" class="form-control"
                                            placeholder="Enter Your Email" />

                                        <label for="password">Password</label>
                                        <input type="password" id="password" name="password" class="form-control"
                                            placeholder="Enter Your Password" />
                                    </div>
                                    <hr />
                                    <center>
                                        <button type="submit" class="btn btn-info">Register</button>
                                        <button type="reset" class="btn btn-warning">Reset</button>
                                    </center>
                                    <hr />
                                    <div class="alert alert-info" role="alert" id="msg1">
                                        <%=msg%>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!--/col-6-->
            <div class="col-md-6">
                <div class="panel">
                    <div class="panel-body">
                        <center>
                            <h5></h5>
                            <h5>Login User</h5>
                        </center>
                        <div class="panel panel-primary">
                            <div class="panel-body">
                                <form action="/api/auth/login" method="POST">
                                    <div class="form-group">

                                        <label for="email">Email</label>
                                        <input type="email" id="email" name="email" class="form-control"
                                            placeholder="Enter Your Email" />

                                        <label for="password">Password</label>
                                        <input type="password" id="password" name="password" class="form-control"
                                            placeholder="Enter Your Password" />
                                    </div>
                                    <hr />
                                    <center>
                                        <button type="submit" class="btn btn-success">Log In</button>
                                        <button type="reset" class="btn btn-danger">Reset</button>
                                    </center>
                                    <hr />
                                    <div class="alert alert-info" role="alert" id="msg2">
                                        <%=invalid%>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!--/col-6-->
        </div>
    </div>
    <script>
        // class selector
        const message = $('.alert.alert-info')
        if (message.length) setTimeout(() => { message.fadeOut('slow'); }, 3000);

        /* id selector
        const msg1 = $( '#msg1' );
        const msg1 = $( '#msg2' );
        if ( msg1.length ) setTimeout( () => {msg1.fadeOut( 'slow' );}, 3000 );
        if ( msg2.length ) setTimeout( () => {msg2.fadeOut( 'slow' );}, 3000 );
        */
    </script>
</body>

</html>